<?xml version="1.0" encoding="UTF-8"?>
<SDFRules>
  <!--  If one of the following string is in format *title* or *bold*, they mark the beginning of the background:
        -   "background"
        -   "law"
        -   "regulation"
        -   "implementing"
    -->
  <SDFRule priority="10000" id="31">
    <tag>beginning-of-background</tag>
    <headAlternatives>
      <head>
        <Form>background</Form>
        <Font>title</Font>
      </head>
      <head>
        <Form>background</Form>
        <Font>bold</Font>
      </head>
      <head>
        <Form>law</Form>
        <Font>title</Font>
      </head>
      <head>
        <Form>law</Form>
        <Font>bold</Font>
      </head>
      <head>
        <Form>regulation</Form>
        <Font>title</Font>
      </head>
      <head>
        <Form>regulation</Form>
        <Font>bold</Font>
      </head>
      <head>
        <Form>implementing</Form>
        <Font>title</Font>
      </head>
      <head>
        <Form>implementing</Form>
        <Font>bold</Font>
      </head>
    </headAlternatives>
  </SDFRule>
  <!--  If one of the following string is in format *title* or *bold*, they mark the beginning of the background:
        -   "legal context"
        -   "legal framework"
    -->
  <SDFRule priority="10000" id="32">
    <tag>beginning-of-background</tag>
    <headAlternatives>
      <head>
        <Form>legal</Form>
        <Font>title</Font>
      </head>
      <head>
        <Form>legal</Form>
        <Font>bold</Font>
      </head>
    </headAlternatives>
    <nextAlternatives>
      <next maxDistance="1">
        <tag>beginning-of-background</tag>
        <headAlternatives>
          <head>
            <Form>context</Form>
            <Font>title</Font>
          </head>
          <head>
            <Form>context</Form>
            <Font>bold</Font>
          </head>
          <head>
            <Form>framework</Form>
            <Font>title</Font>
          </head>
          <head>
            <Form>framework</Form>
            <Font>bold</Font>
          </head>
        </headAlternatives>
      </next>
    </nextAlternatives>
  </SDFRule>
  <!-- with lower priority, we take "history of the contested decision" (without bold or title) as end of the Introduction -->
  <SDFRule priority="9000" id="33">
    <tag>beginning-of-background</tag>
    <headAlternatives>
      <head>
        <Form>history</Form>
      </head>
    </headAlternatives>
    <nextAlternatives>
      <next maxDistance="2">
        <tag>beginning-of-background</tag>
        <headAlternatives>
          <head>
            <Form>the</Form>
          </head>
        </headAlternatives>
        <nextAlternatives>
          <next maxDistance="2">
            <tag>beginning-of-background</tag>
            <headAlternatives>
              <head>
                <Form>contested</Form>
              </head>
            </headAlternatives>
            <nextAlternatives>
              <next maxDistance="2">
                <tag>beginning-of-background</tag>
                <headAlternatives>
                  <head>
                    <Form>decision</Form>
                  </head>
                </headAlternatives>
              </next>
            </nextAlternatives>
          </next>
        </nextAlternatives>
      </next>
    </nextAlternatives>
  </SDFRule>
  <!--  With low priority, these two not in title or bold, but with the second word that ends the sentence:
        -   "legal context"
        -   "legal framework"
    -->
  <SDFRule priority="10000" id="34">
    <tag>beginning-of-background</tag>
    <headAlternatives>
      <head>
        <Form>legal</Form>
      </head>
    </headAlternatives>
    <nextAlternatives>
      <next maxDistance="1">
        <tag>beginning-of-background</tag>
        <headAlternatives>
          <head>
            <Form>context</Form>
            <endOfSentence>true</endOfSentence>
          </head>
          <head>
            <Form>framework</Form>
            <endOfSentence>true</endOfSentence>
          </head>
        </headAlternatives>
      </next>
    </nextAlternatives>
  </SDFRule>
</SDFRules>
